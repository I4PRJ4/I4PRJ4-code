@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glemt dit password?";
}
<div class="CenterEverything">
    <div class="h1Degree" style="font-size: 5em">@ViewData["Title"]</div>
    <div class="h1Degree" style="font-size: 2.5em; color: #fff">Indtast din email.</div>
    <hr />
    <div class="row CenterEverything">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="h1Degree" style="font-size: 2.5em; color: #fff"></label>
                    <input asp-for="Input.Email" class="form-control" style="font-size: 2em"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="gotobtn">Indsend</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
