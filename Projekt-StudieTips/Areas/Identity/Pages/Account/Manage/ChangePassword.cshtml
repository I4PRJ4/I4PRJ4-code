@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Ændre password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="h1Degree" style="font-size: 3em">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="h1Degree" style="font-size: 2em">Nuværende password</label>
                <input style="font-size: 2em" asp-for="Input.OldPassword" class="form-control" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="h1Degree" style="font-size: 2em">Nyt password</label>
                <input  style="font-size: 2em" asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="h1Degree" style="font-size: 2em">Bekræft nyt password</label>
                <input  style="font-size: 2em" asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br/>
            <button type="submit" class="gotobtn">Opdater password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}