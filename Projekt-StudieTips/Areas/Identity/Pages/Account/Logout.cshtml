@page
@model LogoutModel
@{
    ViewData["Title"] = "Er du sikker på, at du vil logge ud?";
}
<div class="CenterEverything">
    <header>
        <div class="h1Degree" style="font-size: 6em">@ViewData["Title"]</div>
        <br/><br/>
        @{
            if (User.Identity.IsAuthenticated)
            {
                <form class="form-inline CenterEverything" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new {area = ""})" method="post">
                    <button type="submit" class="gotobtn" style="padding: 0 1em 0 1em">Log ud</button>
                </form>
            }
            else
            {
                <div class="h1Degree" style="font-size: 6em">Du er nu logget ud.</div>
            }
        }
    </header>
</div>