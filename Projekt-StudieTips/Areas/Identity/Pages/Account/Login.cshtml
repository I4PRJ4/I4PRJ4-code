@page
@model LoginModel

@{
    ViewData["Title"] = "Log ind";
}
<div class="CenterEverything">
    <div class="h1Degree" style="font-size: 5em">@ViewData["Title"]</div>
    <div class="row CenterEverything">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="h1Degree" style="font-size: 2.5em; color: #fff"></label>
                        <input asp-for="Input.Email" class="form-control" style="font-size: 2em"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="h1Degree" style="font-size: 2.5em; color: #fff"></label>
                        <input asp-for="Input.Password" class="form-control" style="font-size: 2em"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="h1Degree" style="font-size: 2.5em; color: #fff">
                                <input asp-for="Input.RememberMe" style="font-size: 2em"/>
                                Husk mig?
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="gotobtn">Log ind</button>
                    </div>
                    <div class="form-group">
                        
                            <a asp-page="./ForgotPassword"><div class="h1Degree" style="font-size: 2.2em; color: #fff">Glemt dit password?</div></a>
                       
                        
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><div class="h1Degree" style="font-size: 2.2em; color: #fff">Registrer som ny bruger</div></a>

                    </div>
                </form>
            </section>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    </div>