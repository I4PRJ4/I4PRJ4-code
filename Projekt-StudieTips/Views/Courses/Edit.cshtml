@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Projekt_StudieTips.Models.ViewModels.DegreeCourse

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Courses.CourseId" />
            <div class="form-group">
                <label asp-for="Courses.CourseName" class="control-label"></label>
                <input asp-for="Courses.CourseName" name="CourseName" id="CourseName" class="form-control" />
                <span asp-for="Courses.CourseName" name="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select name="DegreeId" id="DegreeId">
                    @foreach (var item in Model.Degrees)
                    {
                        <option value="@item.DegreeId">@item.DegreeName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-DegreeId="@Model.Courses.DegreeId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
