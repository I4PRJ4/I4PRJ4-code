@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Projekt_StudieTips.Models.ViewModels.DegreeCourse

@{
    ViewData["Title"] = "Edit";
}
<div class="CenterEverything">
    <h1 class="h1Degree">Redigér kursus</h1>

    <hr />
    <div class="row CenterEverything">
        <div >
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Courses.CourseId" />
                <div class="form-group CenterEverything">
                    <label class="control-label h1Degree" style="font-size: 3em">Navn på kursus</label>
                    <input  style="font-size: 2em; width: 50%; text-align: left; background-color: rgba(255,255,255,0.8);" asp-for="Courses.CourseName" name="CourseName" id="CourseName" class="form-control CenterEverything" />
                    <span asp-for="Courses.CourseName" name="CourseName" class="text-danger"></span>
                </div>
                <label class="control-label h1Degree" style="font-size: 3em">Vælg uddannelse</label>
                    <div style="transform: scale(0.6); background-color: rgba(255,255,255,0.80);" class="form-group select">
                        <select name="DegreeId" id="DegreeId">
                            @foreach (var item in Model.Degrees)
                            {
                                <option value="@item.DegreeId">@item.DegreeName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gem" class="gotobtn" />
                    </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-route-DegreeId="@Model.Courses.DegreeId"><p class="h1Degree" style="font-size: 2.5em; color: #fff">Tilbage til kursus</p></a>
    </div>

    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
