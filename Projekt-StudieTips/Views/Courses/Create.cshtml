@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Projekt_StudieTips.Models.ViewModels.DegreeCourse

@{
    ViewData["Title"] = "Create";
}
<div class="CenterEverything">
    <h1 class="h1Degree">Opret kursus</h1>

    <hr />
    <div class="row CenterEverything">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label h1Degree" style="font-size: 3em">Kursus</label>
                    <input style="font-size: 2em" name="CourseName" id="CourseName" class="form-control" />
                    <span name="CourseName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="hidden" name="DegreeId" id="DegreeId" value="@ViewBag.DegreeId" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Opret" class="gotobtn" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-route-DegreeId="@ViewBag.DegreeId"><p class="h1Degree" style="font-size: 2.5em; color: #fff">Tilbage til kurser</p></a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
