@model Projekt_StudieTips.Models.ViewModels.DegreeCourse

@{
    ViewData["Title"] = "Create";
    
}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Courses.CourseName" class="control-label"></label>
                <input name="CourseName" id="CourseName" class="form-control" />
                <span name="CourseName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select name="DegreeId" id="DegreeId">
                    @foreach (var item in Model.Degrees)
                    {
                        <option value="@item.DegreeId">@item.DegreeName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
