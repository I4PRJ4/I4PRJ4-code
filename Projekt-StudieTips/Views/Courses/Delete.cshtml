@model Projekt_StudieTips.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>Slet kursus</h1>

<h3>Er du sikker på du vil slette dette kursus?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Kursus
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.CourseId"/>
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-DegreeId="@Model.DegreeId">Tilbage til kursus</a>
    </form>
</div>
