@model Projekt_StudieTips.Models.Tip

@{
    ViewData["Title"] = "Delete";
}

<h1>Slet tip</h1>

<h3>Er du sikker på, at du vil slette tippet?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Kursus:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>
        <dt class = "col-sm-2">
            Dato:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Overskrift:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Headline)
        </dd>
        <dt class = "col-sm-2">
            Tekst:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TipId" />
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-action="Index">Tilbage</a>
    </form>
</div>
