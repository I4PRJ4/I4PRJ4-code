@model IEnumerable<Projekt_StudieTips.Models.Tip>

@{
    ViewData["Title"] = "Index";
}


@{
    var courseName = ViewBag.CourseName;
    var courseId = ViewBag.CourseId;
}

<html>
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <style>
        .h1 {
            text-align: center;
        }

        .container {
            position: relative;
        }

        .topright {
            float: right;
            top: 8px;
            right: 16px;
            font-size: 12px;
        }

        .tiptext2 {
            border-bottom: 1px solid darkblue;
        }

        .tiptext3 {
            font-style: italic;
            position: relative;
            font-size: 16px;
        }


        .more {
            display: none;
        }

        .post {
            width: 100%;
            font-size: 18px;
            text-align: justify;
            line-height: 25px;
            border: 1px solid black;
            margin: 10px;
            padding: 20px;
        }

            .post:not(:last-child) {
                margin-bottom: 30px;
            }

         .read{
            margin-top: 15px;
            display: block;
            background-color: rgba(255,0,0,0);
            color: black;
            border: none;
            outline: none;
            padding: 8px 20px;
            text-transform: capitalize;
            cursor: pointer;
            font-size: 14px;
            font-style: italic;
        }
    </style>
</head>

<div class="text-center">
    <h1>@courseName </h1>
</div>


<body class="text-center">


    <p>
        <a asp-action="Create" asp-route-value="@courseId">Tilføj nyt tip</a>
    </p>

    @* Bruger class=mx-auto for at centrere indholdet *@
    <div class="mx-auto" style="width: 50%; text-align: center;">
        @foreach (var item in Model)
        {
            var text = item.Text;
            var textLength = text.Length;
            var first = "";
            var end = "";
            var rmLength = 40;

            if (textLength >= rmLength)
            {
                first = text.Substring(0, rmLength);
                end = text.Substring(rmLength);
            }
            else
            {
                first = text.Substring(0, textLength);

            }

            <div class="post" name="postdiv" style="overflow-wrap: break-word">
                <div class="topright">
                    <p>
                        @Html.DisplayFor(modelItem => item.Date)
                    </p>
                </div>
                @* INDSÆT OVERTSKRIFT *@
                <div class="tiptext2">
                    <h5>
                        @Html.DisplayFor(modelItem => item.Headline)
                    </h5>
                </div>

                @* INDSÆT tip text *@
                <div class="tiptext3">
                    @if (textLength >= rmLength)
                    {
                        @(first)<span class="dots">...</span><span class="more">@(end)</span>
                        <button class="read">Vis mere...</button>
                    }
                    else
                    {
                        @(first)
                    }
                </div>
            </div>
        }
    </div>

    <div>
        <a asp-controller="Home" asp-action="Index">Hjem</a>
    </div>

    @*Javascript der håndterer read more / read less collapse-funktionen på tips*@
    <script>
        $(document).ready(function () {
            $(".read").click(function () {
                $(this).prev().toggle();
                $(this).siblings('.dots').toggle();
                if ($(this).text() === 'Vis mere...') {
                    $(this).text('Vis mindre...');
                }
                else {
                    $(this).text('Vis mere...');
                }
            });
        });
    </script>


</body>
