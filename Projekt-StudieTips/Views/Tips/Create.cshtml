@using Microsoft.AspNetCore.Identity
@model Projekt_StudieTips.Models.Tip

@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Create";
}

@{
    var courseId = ViewBag.CourseId;
}

<h1>Tilføj nyt tip</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Username" class="form-control" type="hidden" value="@User.Claims.FirstOrDefault(c => c.Type == "User" || c.Type == "Admin").Value" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CourseId" class="form-control" type="hidden" value="@courseId" />
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Overskrift</label>
                <input asp-for="Headline" class="form-control" />
                <span asp-validation-for="Headline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tekst</label>
                <textarea asp-for="Text" class="form-control" style="height:200px"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tilbage til tips</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
