@model Projekt_StudieTips.Models.Tip

@{
    ViewData["Title"] = "Edit";
}
<div class="CenterEverything">
    <h1 class="h1Degree">Redigér tip</h1>

    <hr />
    <div class="row CenterEverything">
        <div class="col-md-4 CenterEverything">
            <form asp-action="Edit">
                <div style="font-size: 1.5em" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TipId" />
                <div style="font-size: 1.5em" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Username" />
                <div style="font-size: 1.5em" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CourseId" />
                <div style="font-size: 1.5em" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Date" />
                <div class="form-group">
                    <p class="h1Degree" style="font-size: 2.5em">Overskrift</p>
                    <input style="font-size: 2em" asp-for="Headline" class="form-control" />
                    <span style="font-size: 1.5em" asp-validation-for="Headline" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p class="h1Degree" style="font-size: 2.5em">Tekst</p>
                    <textarea style="font-size: 2em" asp-for="Text" class="form-control" style="height:200px"></textarea>
                    <span style="font-size: 1.5em" asp-validation-for="Text" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Gem" class="gotobtn" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-route-id="@Model.CourseId">
            <p class="h1Degree" style="font-size: 2em; color: #fff">Tilbage til tips</p>
        </a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
