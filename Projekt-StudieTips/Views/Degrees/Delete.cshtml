@model Projekt_StudieTips.Models.Degree

@{
    ViewData["Title"] = "Delete";
}

<h1>Slet</h1>

<h3>Er du sikker på, at du vil slette denne uddannelse?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Uddannelse
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DegreeName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.DegreeId" />
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-action="Index">Tilbage til uddannelser</a>
    </form>
</div>
