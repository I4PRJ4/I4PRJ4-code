@model Projekt_StudieTips.Models.Degree

@{
    ViewData["Title"] = "Edit";
}

<h1>Rediger uddannelse</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DegreeId" />
            <div class="form-group">
                <label  class="control-label">Navn på uddannelse</label>
                <input asp-for="DegreeName" class="form-control" />
                <span asp-validation-for="DegreeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gem" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-DegreeId="@ViewBag.DegreeId">Tilbage til uddannelser</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
